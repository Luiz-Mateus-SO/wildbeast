# =============================
# SEGURANÇA BÁSICA
# =============================

# Bloquear acesso ao diretório .git (caso alguém tente acessar pelo navegador)
RedirectMatch 404 /\.git

# Bloquear listagem de diretórios (ninguém vai ver os arquivos dentro das pastas)
Options -Indexes

# Proteger arquivos sensíveis
<FilesMatch "(\.(env|ini|log|sh|bak|sql|zip|tar|gz))$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Impedir que alguém execute scripts PHP em pastas de upload
<FilesMatch "\.(php|php5|phtml)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# =============================
# PERFORMANCE / CACHE
# =============================

# Ativar compressão GZIP
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript application/json
</IfModule>

# Cache inteligente
<IfModule mod_expires.c>
  ExpiresActive On

  # HTML: sem cache (sempre atualizado)
  ExpiresByType text/html "access plus 0 seconds"

  # CSS e JS: 7 dias
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType application/javascript "access plus 7 days"
  ExpiresByType text/javascript "access plus 7 days"

  # Imagens: 30 dias
  ExpiresByType image/jpeg "access plus 30 days"
  ExpiresByType image/png "access plus 30 days"
  ExpiresByType image/gif "access plus 30 days"
  ExpiresByType image/webp "access plus 30 days"
  ExpiresByType image/svg+xml "access plus 30 days"
</IfModule>

# Revalidação do cache para CSS e JS
<IfModule mod_headers.c>
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "max-age=604800, must-revalidate"
  </FilesMatch>
  <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg)$">
    Header set Cache-Control "max-age=2592000, public"
  </FilesMatch>
</IfModule>
